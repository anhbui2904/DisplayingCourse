<div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-image">
          <script src="https://fast.wistia.com/embed/medias/<%= @course.video%>.jsonp" async></script><script src="https://fast.wistia.com/assets/external/E-v1.js" async></script><div class="wistia_embed wistia_async_<%= @course.video%>" style="height:360px;position:relative;width:640px"><div class="wistia_swatch" style="height:100%;left:0;opacity:0;overflow:hidden;position:absolute;top:0;transition:opacity 200ms;width:100%;"><img src="https://fast.wistia.com/embed/medias/<%= @course.video%>/swatch" style="filter:blur(5px);height:100%;object-fit:contain;width:100%;" alt="" aria-hidden="true" onload="this.parentNode.style.opacity=1;" /></div></div>
        <div>


        <div class="card-content white-text">
          <div class="row">
            <div class=col m4 center">
              <%= image_tag "photos/#{@course.image}" %>
              <div>
            <span class="card-title"><%= @course.title %></span>
            <% (1..4).each do %>
            <% (1..@course.star).each do %>
            <i class="material-icons">grade</i>
            <% end %>
            <% end %>
            <p><%= @course.description %></p>
        </div>
        </div>
      </div>
    </div>
  </div>
